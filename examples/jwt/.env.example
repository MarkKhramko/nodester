# Application Configuration
NODE_ENV=development
APP_TITLE=nodester-jwt
APP_HOST=http://localhost:8080
APP_PORT=8080

# Database Configuration
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_HOST=localhost
DB_PORT=3306
DB_DIALECT=mysql

# Redis Configuration (Optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_USERNAME=
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_KID=default
JWT_ISSUER=nodester-app
JWT_AUDIENCE=nodester-app
JWT_ACCESS_TOKEN_LIFETIME=900
JWT_REFRESH_TOKEN_LIFETIME=2592000

# Keys will be generated automatically during bootstrap (npm run bootstrap)
# Or generate manually: openssl genrsa -out private.pem 2048 && openssl rsa -in private.pem -pubout -out public.pem
JWT_PRIVATE_KEY=
JWT_PUBLIC_KEY=
