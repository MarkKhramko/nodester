{
  "name": "nodester-boilerplate",
  "version": "0.0.1",
  "description": "Ready-to-use nodester-based project boilerplate.",
  "author": "Mark Khramko <markkhramko@gmail.com>",
  "scripts": {
    "start": "node ./src/app/app.js",
    "dev": "nodemon",
    "production": "NODE_ENV=production node ./src/app/app.js",

    "bootstrap": "node ./bootstrap/init/index.js",

    "db:migrate": "node ./bootstrap/migrator/index.js $force",
    "db:seed": "node ./bootstrap/seeder/index.js $force",

    "tools:generate": "nodester-tools -g"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "nodester": "^0.6.72"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "module-alias": "^2.2.3",
    "nodemon": "^3.0.1",
    "nodester-tools": "^0.0.2"
  },
  "engines": {
    "node": "^20.0.0"
  },
  "volta": {
    "node": "20.18.0"
  }
}
